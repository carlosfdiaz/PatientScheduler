@model PatientAppointmentVM

<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Event</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" id="AppointmentForm">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Appointment.DoctorId" type="hidden" value="" id="DoctorId" />
                    <input asp-for="Appointment.PatientId" type="hidden" value="@Model.Patient.Id" id="PatientId"  />
                    <div class="form-group">
                        <label>Patient</label>
                        <input type="text" disabled class="form-control" value="@Model.Patient.FirstName @Model.Patient.LastName" id="PatientName" />
                    </div>
                    <div class="form-group">
                        <label for="appt">Appointment Start Time</label>
                        <input asp-for="Appointment.StartTime" type="time" class="form-control" id="AppointmentStart" value=""  >
                        <span asp-validation-for="Appointment.StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="appten">Appointment End Time</label>
                        <input asp-for="Appointment.EndTime" type="time" class="form-control" id="AppointmentEnd" value="" >
                        <span asp-validation-for="Appointment.EndTime" class="text-danger"></span>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="SaveChanges">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>