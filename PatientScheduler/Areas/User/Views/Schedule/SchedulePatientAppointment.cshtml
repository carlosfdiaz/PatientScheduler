@{
    if (Model.Patient != null)
    {
        <div class="container mb-2 ml-0 pl-0">
            <div class="row">
                <div class="col-12">
                    <h5>Schedule Appointment for @Model.Patient.FirstName @Model.Patient.LastName </h5>
                </div>
            </div>
        </div>
        
    }
}

<partial name="_AppointmentModal" />
<div id='calendar'></div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },                
                navLinks: true, // can click day/week names to navigate views   
                eventStartEditable: false,
                selectable: true,
                selectMirror: true,
                select: function (arg) {

                    var btn = document.getElementById("SaveChanges");

                    var dateStart = moment(arg.start);
                    var dateEnd = moment(arg.end);
                    var verifySelectdateEnd = moment(arg.end).subtract(1, 'hour');


                    if (verifySelectdateEnd.isAfter(dateStart, 'day')) {
                        calendar.unselect();
                    } else {

                        let dateComponentStart = dateStart.format('YYYY-MM-DD');
                        let timeComponentStart = dateStart.format('HH:mm');
                       
                        let timeComponentEnd = dateEnd.format('HH:mm');

                        var timeStartField = document.getElementById("AppointmentStart");
                        var timeEndField = document.getElementById("AppointmentEnd");

                        if (timeComponentStart == "00:00") {
                            timeStartField.value = "";
                            timeEndField.value = "";
                        } else {
                            timeStartField.value = timeComponentStart;
                            timeEndField.value = timeComponentEnd;
                        }

                        $('#Modal').modal()

                       
                        btn.onclick = () => {
                            let form = document.getElementById("AppointmentForm");
                            form.addEventListener('submit', () => {
                                event.preventDefault();

                                if ($("#AppointmentForm").valid()) {
                                    timeComponentStart = timeStartField.value;
                                    timeComponentEnd = timeEndField.value;                                    
                                    dateStart = moment(dateComponentStart + ' ' + timeComponentStart)._d;
                                    dateEnd = moment(dateComponentStart + ' ' + timeComponentEnd)._d;
                                    document.getElementById("DoctorId").value = 1;
                                   

                                    PostAppointment();

                                    calendar.addEvent({
                                        title: document.getElementById("PatientName").value,
                                        start: moment(dateComponentStart + ' ' + timeComponentStart)._d,
                                        end: moment(dateComponentStart + ' ' + timeComponentEnd)._d,

                                    });
                                    console.log(dateStart);
                                    console.log(dateEnd);

                                    $('#Modal').modal('toggle');
                                }
                               
                            });
                      @*      if ($("#AppointmentForm").valid()) {
                                timeComponentStart = timeStartField.value;
                                timeComponentEnd = timeEndField.value;
                                console.log(timeComponentEnd);
                                dateStart = moment(dateComponentStart + ' ' + timeComponentStart)._d;
                                dateEnd = moment(dateComponentStart + ' ' + timeComponentEnd)._d;

                                calendar.addEvent({
                                    title: document.getElementById("PatientName").value,
                                    start: moment(dateComponentStart + ' ' + timeComponentStart)._d,
                                    end: moment(dateComponentStart + ' ' + timeComponentEnd)._d,

                                });
                                console.log(dateStart);
                                console.log(dateEnd);

                                $('#Modal').modal('toggle');
                            }*@
                        }
                    }


                },
                eventClick: function (arg) {
                    if (confirm('Are you sure you want to delete this event?')) {
                        arg.event.remove()
                    }
                },
                displayEventEnd: true,
                editable: true,
                dayMaxEvents: true, // allow "more" link when too many events
                events: [
                    {
                        title: 'All Day Event',
                        start: '2020-08-01'
                    },
                    {
