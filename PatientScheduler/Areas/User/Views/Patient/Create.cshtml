@model Patient

<div class="card">
    <div class="card-header bg-primary text-white">
        <div class="row">
            <div class="col-6">
                <h5 class="mt-3">
                    <i class="far fa-id-card" style="font-size: 1.5rem;"></i>
                    New Patient Information
                </h5>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Index" asp-controller="Home" class="btn btn-grey">Go Back</a>
            </div>
        </div>
    </div>
    <div class="card-body mr-3 ml-3">
        <form method="post" asp-action="PostCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
             
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MiddleName"></label>
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-12">
                    <div class="form-group">
                        <i class="fas fa-calendar" style="color: #4285F4;"></i>
                        <label asp-for="DateOfBirth"></label>
                        <input asp-for="DateOfBirth" type="date" class="form-control">
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                  
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="SSN"></label>
                        <input asp-for="SSN" id="SSN" class="form-control" />
                        <span asp-validation-for="SSN" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Gender"></label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<PatientScheduler.Models.Enums.Gender>()" class="form-control">
                            <option value="">Select...</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Phone"></label>
                        <input asp-for="Phone" id="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>


            </div>

            <div class="form-group row">
                <div class="col-5">
                    <div class="form-group">
                        <label asp-for="Address.Street"></label>
                        <input asp-for="Address.Street" class="form-control mb-3" />
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Address.City"></label>
                        <input asp-for="Address.City" class="form-control mb-3" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <label asp-for="Address.State"></label>
                        <select asp-for="Address.State" asp-items="Html.GetEnumSelectList<PatientScheduler.Models.Enums.States>()" class="form-control">
                            <option value="">Select...</option>
                        </select>
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <label asp-for="Address.Zip"></label>
                        <input type="text" asp-for="Address.Zip" class="form-control mb-3" />
                    </div>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-12 text-right">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-dark pl-5 pr-5">Cancel</a>
                    <input type="submit" class="btn btn-success pl-5 pr-5" value="Submit" />
                </div>

            </div>
        </form>
    </div>



</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  
}



