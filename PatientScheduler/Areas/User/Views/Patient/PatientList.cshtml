@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Patient List -";
}
<style>
    div.dataTables_wrapper div.dataTables_paginate ul.pagination .page-item .page-link:hover {
        background-color: #33B5E5;
        color: white;
    }

    div.dataTables_wrapper div.dataTables_paginate ul.pagination .page-item.active .page-link {
        background-color: #33B5E5;
    }

        div.dataTables_wrapper div.dataTables_paginate ul.pagination .page-item.active .page-link:focus {
            background-color: #33B5E5;
        }
</style>

@{
    if (Model != null)
    {
        <table id="patientTable" class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th class="th-sm">Name</th>
                    <th class="th-sm">Date Of Birth</th>
                    <th class="th-sm">Gender</th>
                    <th class="th-sm"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName @item.LastName</td>
                        <td>DOB to Go here</td>
                        <td>@Enum.Parse(typeof(PatientScheduler.Models.Enums.Gender), @item.Gender)</td>
                        <td><a class="btn btn-sm btn-primary" style="font-size: .8rem;">Details</a></td>
                    </tr>
                }

                <tr>
                    <td>Reil Thom</td>
                    <td>DOB to Go here</td>
                    <td>Male</td>
                    <td><a class="btn btn-sm btn-primary" style="font-size: .8rem;">Details</a></td>
                </tr>

        </table>
    }
}



@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(document).ready(function () {
            $('#patientTable').DataTable({
                "pagingType": "first_last_numbers"
            });
            $('.dataTables_length').addClass('bs-select');
        });


    </script>


}