@model PatientScheduler.Models.Patient


@{
    if (Model != null)
    {

        <div class="card">
            <div class="card-header text-white bg-primary">
                <div class="row">
                    <div class="col-6">
                        <h5 class="mt-3"><i class="far fa-id-card" style="font-size: 1.5rem;"></i> Patient Information</h5>
                    </div>
                    <div class="col-6 text-right">
                        <a asp-action="PatientList" class="btn btn-grey">Go to Patient List</a>
                    </div>

                </div>

            </div>
            <div class="card-body">
                <div class="row p-5">
                    <div class="col-lg-6 col-md-6 col-sm-12 mb-sm-3">
                        <div class="row">
                            <div class="col-lg-6">
                                <h5>Patient Profile</h5>
                            </div>
                            <div class="col-lg-6 pl-1">
                                <a asp-action="EditPatient" asp-route-id="@Model.Id" class="btn btn-sm btn-cyan" style="margin-top: -4px;   font-size: .7rem;">Edit</a> 
                            </div>
                            <div class="col-6">
                                <p class="mb-1">Name</p>
                                <p class="mb-1">Gender</p>
                                <p class="mb-1">Date of Birth</p>
                                <p class="mb-1">Phone</p>
                            </div>
                            <div class="col-6">
                                <p class="mb-1">@Model.FirstName @Model.LastName</p>
                                <p class="mb-1">@Enum.Parse(typeof(PatientScheduler.Models.Enums.Gender), @Model.Gender)</p>
                                <p class="mb-1">@Model.DateOfBirth.ToString("MM/dd/yyy")</p>
                                <p class="mb-1">@Model.Phone</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        @{
                            if (Model.Insurance == null)
                            {
                                <h5>Insurance Information</h5>
                                <a asp-action="PatientInsurance" asp-route-id="@Model.Id" class="btn btn-success ml-0">Add Insurance Info</a>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-lg-6">
                                        <h5>Insurance Information</h5>
                                    </div>
                                    <div class="col-lg-6 pl-2">
                                        <form method="post" asp-action="PostDeletePatientInsurance" asp-route-id="@Model.Id" id="DeleteInsuranceForm">
                                            <a asp-action="EditPatientInsurance" asp-route-id="@Model.Id" class="btn btn-sm btn-cyan" style="margin-top: -4px;   font-size: .7rem;">Edit</a>
                                            <button type="button" class="btn btn-sm btn-danger" id="DeleteInsuranceBtn" style="margin-top: -4px;"><i class="far fa-trash-alt" style="font-size: 1rem;"></i></button>
                                        </form>
                                    </div>
                                    <div class="col-6">
                                        <p class="mb-1">Insurance Carrier</p>
                                        <p class="mb-1">Group Num/Member ID</p>
                                        <p class="mb-1">Phone</p>
                                    </div>
                                    <div class="col-6">
                                        <p class="mb-1">@Model.Insurance.Name</p>
                                        <p class="mb-1">@Model.Insurance.GroupNumber</p>
                                        <p class="mb-1">@Model.Insurance.Phone</p>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-right">
                        <form method="post" id="DeletePatientForm" asp-action="PostDeletePatient" asp-route-id="@Model.Id">
                            <button type="button" id="DeletePatientBtn" class="btn btn-danger"><i class="far fa-trash-alt"  style="font-size: 1rem;"></i> Delete Patient</button>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5><i class="far fa-calendar-alt" style="font-size: 1.5rem;"></i> Appointments</h5>
            </div>
            <div class="card-body">

            </div>
        </div>


    }
    else
    {
        <p>No records found.</p>
    }

}

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

   
}
