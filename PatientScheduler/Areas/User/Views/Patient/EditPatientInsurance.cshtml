@model PatientScheduler.Models.Patient
<div class="card">
    <div class="card-header text-white bg-primary">
        <div class="row">
            <div class="col-6">
                <h5 class="mt-3">
                    <i class="far fa-id-card" style="font-size: 1.5rem;"></i>
                    Insurance Info for @Model.FirstName @Model.LastName
                </h5>
            </div>
            <div class="col-6 text-right">
                <a asp-action="PatientPage" asp-route-id="@Model.Id" class="btn btn-grey">Go Back</a>
            </div>
        </div>
    </div>
    <div class="card-body mr-3 ml-3">
        <form method="post" asp-action="PostEditPatientInsurance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.Id" name="Id" />
            <input type="hidden" value="@Model.InsuranceId" name="InsuranceId" />
            <div class="form-group row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Insurance.Name"></label>
                        <input asp-for="Insurance.Name" class="form-control" value="@Model.Insurance.Name">
                        <span asp-validation-for="Insurance.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Insurance.GroupNumber"></label>
                        <input asp-for="Insurance.GroupNumber" class="form-control" value="@Model.Insurance.GroupNumber" />
                        <span asp-validation-for="Insurance.GroupNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Insurance.Phone"></label>
                        <input asp-for="Insurance.Phone" class="form-control" id="Phone" value="@Model.Insurance.Phone" />
                        <span asp-validation-for="Insurance.Phone" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-12 text-right">
                    <a asp-action="PatientPage" asp-route-id="@Model.Id" class="btn btn-dark pl-5 pr-5">Cancel</a>
                    <input type="submit" class="btn btn-success pl-5 pr-5" value="Submit" />
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}